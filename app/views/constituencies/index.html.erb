<p id="notice"><%= notice %></p>

<h1>Listing Constituencies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Voters</th>
      <th>Voivodeship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constituencies.each do |constituency| %>
      <tr>
        <td><%= constituency.name %></td>
        <td><%= constituency.voters %></td>
        <td><%= constituency.voivodeship.name %></td>
        <td><%= link_to 'Show', constituency %></td>
        <% if can? :update, constituency %>
          <td><%= link_to 'Edit', edit_constituency_path(constituency) %></td>
        <% end %>
        <% if can? :destroy, constituency %>
          <td><%= link_to 'Destroy', constituency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @constituencies %>
  <%= link_to 'New Constituency', new_constituency_path %>
<% end %>